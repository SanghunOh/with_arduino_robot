void loop() {
  display.fillScreen(MAGENTA);

  cnt = 0;
  for(y=0;y<64;y++){
    for(x=0;x<96;x++){
      if(SeeedLogo[cnt] == 0x00) {
        display.drawPixel(x, y, BLACK);
      } else {
        display.drawPixel(x, y, WHITE);
      }
      Serial.print(SeeedLogo[cnt]);
      cnt++;
    }
    Serial.println();
  }
  delay(1000);
  Serial.println(cnt);
}

